<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">

<h1>Editing Book</h1>

<%=form_with model: @book,url: book_path,method: :patch do |f| %>

<p>Title</p>
<p><%= f.text_field:title %></p>
<p>Opinion</p>
<p><%= f.text_area:body %></p>
<div class="form-group">
<%= f.submit'Update Book', class:'btn btn-sm btn-success' %>
</div>

<p><%= link_to 'Show',book_path(@book)%> |
<%= link_to 'Back',books_path %></p>

<% end %>

     </div>
  </div>
</div>
