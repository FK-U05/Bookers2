<h1>User info</h1>
<%= image_tag @user.get_profile_image(100,100) %>
<%= @user.name%>
<%= @user.introduction %>
<%= link_to '設定',edit_user_path(@user) %>

<h1>Book detail</h1>

<%= image_tag @user.get_profile_image(100,100)%>
<p><%= link_to user_path(@user) do%>
<%= @user.name %></p>
<% end %>
<%= link_to book_path(@book) do %>
<%= @book.title %>
<% end %>
<%= @book.body %>

<% if @user == current_user %>
<%= link_to'Edit',edit_book_path%>
<%= link_to'Destroy',book_path,method: :delete %>

<% end %>

<h1>New book</h1>
<%= form_with model: @booknew, url: books_path do |f| %>
<p>Title</p>
<p><%= f.text_field :title %></p>
<p>Opinion</p>
<p><%= f.text_area :body %></p>
<p><%= f.submit 'Create Book' %></p>

<%end%>


