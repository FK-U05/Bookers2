<div class="container">
  <div class="row">
    <div class="col-md-3">
     <%= render 'info',user: @user %>

     <h2 class="mt-3">New book</h2>
     <%= form_with model: @booknew, url: books_path do |f| %>
     <p>Title</p>
     <p><%= f.text_field :title %></p>
     <p>Opinion</p>
     <p><%= f.text_area :body %></p>
     <input class="btn btn-success" type="submit" value="Create Book">

     <%end%>
    </div>

    <div class="col-md-8 offset-md-1">
    <h1>Book detail</h1>
    <table class="table">
      <tbody>
        <tr>
         <td><%= image_tag @user.get_profile_image(100,100)%></td>
         <td><%= link_to user_path(@user) do%>
             <%= @user.name %></td>
             <% end %>
         <td><%= link_to book_path(@book) do %>
             <%= @book.title %></td>
             <% end %>
         <td><%= @book.body %></td>

         <% if @user == current_user %>
         <td><%= link_to'Edit',edit_book_path %></td>
         <td><%= link_to'Destroy',book_path,method: :delete %></td>

         <% end %>
        </tr>
      </tbody>
    </table>
    </div>
  </div>
</div>

