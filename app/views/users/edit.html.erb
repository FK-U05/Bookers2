<% if @user.errors.any? %>
  <%= @user.errors.count %> errors prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">


  <h1>User info</h1>

  <%= form_with model:@user do |f| %>
  <div class='form-group'>
  <p>Name</p>
  <p><%= f.text_field:name %></p>
  </div>
  <div class='form-group'>
  <p>Image</p>
  <p><%= f.file_field:profile_image,accept:"image/*" %></p>
  </div>
  <div class='form-group'>
  <p>Introduction</p>
  <p><%= f.text_area:introduction %></p>
  </div>
  <div class='form-group'>
  <%= f.submit'Update User', class:'btn btn-sm btn-secondary' %>
  </div>

  <% end %>
     </div>
  </div>
</div>