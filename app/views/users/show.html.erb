<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">

      <%= render 'books/info',user: @user %>

      <%= render 'books/new',book: @book %>

    </div>

    <div class="col-md-8 offset-md-1">
     <h1>Books</h1>
      <table class="table">
        <thead>
          <tr>

            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
         <tr>
          <td><%= image_tag book.user.get_profile_image(100,100) %></td>
          <td><%= link_to book_path(book) do%>
              <%= book.title %></td>
              <% end %>
          <td><%= book.body %></td>

          <% if @user == current_user %>

          <td><%= link_to'Edit',edit_book_path(book) %></td>
          <td><%= link_to'Destroy',book_path(book),method: :delete %></td>

          <% end %>
          <% end %>
         </tr>
        </tbody>
        </table>
    </div>
  </div>
</div>