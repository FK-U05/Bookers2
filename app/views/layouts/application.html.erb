<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2App</title>
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg bg-light">
      <div class="container-fluid">
        <h1 class="navbar-brand"><%=link_to 'Bookers',root_path %></h1>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
           <% if user_signed_in? %>
          <ul class="navbar-nav">
           <li class="nav-item">
            <i class="fas fa-home"></i>
             <%= link_to 'Home',user_path(current_user) %></li>
           <li class="nav-item">
            <i class="fas fa-users"></i>
             <%= link_to"Users",users_path %></li>
           <li class="nav-item">
            <i class="fas fa-book-open"></i>
             <%= link_to"Books",books_path %></li>
           <li class="nav-item">
            <i class="fas fa-sign-out-alt"></i>
             <%= link_to"Log out",destroy_user_session_path,method: :delete %></li>
          </ul>
        <% else %>
        <ul>

        <li class="navbar">
          <i class="fas fa-home"></i>
           <%= link_to"Home",root_path %></li>
        <li class="navbar">
          <i class="fas fa-link"></i>
           </i><%= link_to"About",about_path %></li>
        <li class="navbar">
          <i class="fas fa-user-plus"></i>
          <%= link_to"Sign up",new_user_registration_path %></li>
        <li class="navbar">
          <i class="fas fa-sign-in-alt"></i>
          <%= link_to"Log in",new_user_session_path %></li>
        <% end %>
      </ul>
    </header>
    <main>
       <div class="notice"><%= flash[:notice] %></div>
        <%= yield %>
    </main>

    <footer>
      <p>CopyRight Infratop.inc</p>
    </footer>
  </body>
</html>


