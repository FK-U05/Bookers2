<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2App</title>
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
      <link href="https://fonts.googleapis.com/css? family=Kaushan+Script" rel="stylesheet">
  </head>

  <body>
    <div class="topmain">
    <header>
      <nav class="navbar navbar-dark bg-dark">
      <div class="container-fluid">
        <%=link_to root_path do %>
        <h1 class="navbar-brand mb-0 h1">Bookers
        </h1>
        <% end %>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
         <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        </button>
           <% if user_signed_in? %>
          　<ul class="navbar-nav">
          　  <li class="nav-item">
             <%= link_to user_path(current_user) do %>
              <i class="fas fa-home"></i>
                <%= "Home" %></li>
                <% end %>
             <li class="nav-item">
             <%= link_to users_path do %>
             <i class="fas fa-users"></i>
              <%= "Users" %></li>
              <% end %>
             <li class="nav-item">
             <%= link_to books_path do %>
             <i class="fas fa-book-open"></i>
             <%= "Books" %></li>
             <% end %>
             <li class="nav-item">
             <%= link_to destroy_user_session_path,method: :delete do %>
             <i class="fas fa-sign-out-alt"></i>
             <%= "Log out" %></li>
             <% end %>
            </ul>

           <%else%>

        <ul>

        <li class="navbar">
          <i class="fas fa-home"></i>
           <%= link_to"Home",root_path %></li>
        <li class="navbar">
          <i class="fas fa-link"></i>
           </i><%= link_to"About",about_path %></li>
        <li class="navbar">
          <i class="fas fa-user-plus"></i>
          <%= link_to"Sign up",new_user_registration_path %></li>
        <li class="navbar">
          <i class="fas fa-sign-in-alt"></i>
          <%= link_to"Log in",new_user_session_path %></li>
        <% end %>
      </ul>
    </header>
    <main>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <%= flash[:bookup] %>
      <%= flash[:bookupd] %>
      <%= flash[:userupd] %>
        <%= yield %>
    </main>

    <footer>
      <p class="end">CopyRight Infratop.inc</p>
    </footer>
    </div>
  </body>
</html>